{
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "chat.agent.enabled": true,
  "chat.detectParticipant.enabled": true,
  "chat.editor.fontSize": 16,
  "chat.promptFiles": true,
  "cSpell.userWords": ["datapath"],
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "'JetBrains Mono Nerd Font', 'Martian Mono', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  "editor.glyphMargin": false,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hans": true
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.decorations.badges": false,
  "explorer.decorations.colors": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "afterDelay",
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Follow conventional commit message format: <type>: <message>"
    },
    {
      "text": "Type can be one of the following: feat, fix, docs, style, refactor, perf, test, chore, revert"
    },
    {
      "text": "Message should be a short description of the change"
    }
  ],
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false,
    "scminput": false
  },
  "githubPullRequests.experimental.chat": true,
  "githubPullRequests.experimental.notificationsView": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:claude-3.7-sonnet",
  "jupyter.interactiveWindow.notebookRepl": true,
  "latex-workshop.formatting.latex": "tex-fmt",
  "latex-workshop.intellisense.package.enabled": true,
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.listing",
    "*.nav",
    "*.xml",
    "*.fdb_latexmk"
  ],
  "latex-workshop.latex.recipe.default": "lastUsed",
  "latex-workshop.latex.recipes": [
    {
      "name": "LaTeXmk (Auto)",
      "tools": ["latexmk"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-outdir=%OUTDIR%",
        "%DOCFILE%"
      ],
      "command": "latexmk",
      "name": "latexmk"
    }
  ],
  "latex-workshop.message.error.show": false,
  "latex-workshop.message.warning.show": false,
  "latex-workshop.showContextMenu": true,
  "latex-workshop.view.pdf.external.viewer.args": [
    "--unique",
    "file:%PDF%#src:%LINE% %PDF%"
  ],
  "latex-workshop.view.pdf.external.viewer.command": "okular",
  "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
  "latex-workshop.view.pdf.viewer": "external",
  "markdown.updateLinksOnFileMove.enabled": "prompt",
  "markdown.validate.enabled": true,
  "notebook.formatOnSave.enabled": true,
  "notebook.lineNumbers": "on",
  "notebook.markup.fontFamily": "Consolas",
  "notebook.markup.fontSize": 20,
  "terminal.integrated.env.osx": {
    "PATH": "${env:PATH}:/Library/TeX/texbin"
  },
  "todo-tree.general.tags": ["BUG", "HACK", "TODO", "XXX", "[ ]", "[x]"],
  "workbench.editor.empty.hint": "hidden",
  "workbench.editorAssociations": {
    "*.bib": "default",
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.pdf": "latex-workshop-pdf-hook"
  },
  "workbench.editorLargeFileConfirmation": 50,
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "material-icon-theme",
  "chat.tools.autoApprove": true
}
