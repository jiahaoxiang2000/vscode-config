{
  // Settings that apply to all profiles
  "workbench.settings.applyToAllProfiles": [
    // Neovim core settings
    "vscode-neovim.neovimClean",
    "vscode-neovim.compositeKeys",
    "vscode-neovim.ctrlKeysForInsertMode",
    "vscode-neovim.ctrlKeysForNormalMode",
    "vscode-neovim.highlightGroups.highlights",

    // Editor settings for Vim
    "editor.scrollbar.horizontal",
    "editor.lineNumbers",
    "editor.cursorSurroundingLines",
    "editor.scrollBeyondLastLine",
    "editor.wordWrap",
    "editor.formatOnSave",
    "editor.mouseWheelZoom",
    "editor.cursorSmoothCaretAnimation",
    "editor.smoothScrolling",
    "editor.cursorBlinking",

    // Workbench settings
    "workbench.colorTheme",
    "workbench.activityBar.location",
    "workbench.panel.showLabels",
    "workbench.navigationControl.enabled",
    "workbench.list.automaticKeyboardNavigation",
    "window.commandCenter",
    "window.zoomLevel",

    // System and compatibility
    "keyboard.dispatch",
    "security.workspace.trust.untrustedFiles",
    "security.promptForLocalFileProtocolHandling",

    // Terminal settings
    "terminal.integrated.inheritEnv",
    "terminal.integrated.fontSize",

    // Git settings
    "git.autofetch",
    "git.confirmSync", // Chat and AI settings
    "inlineChat.hideOnRequest",
    "inlineChat.enableV2",
    "chat.editor.wordWrap",
    "chat.tools.autoApprove",
    "github.copilot.nextEditSuggestions.enabled",
    "github.copilot.enable",
    "github.copilot.chat.search.semanticTextResults",
    "github.copilot.chat.commitMessageGeneration.instructions",

    // Development settings
    "remote.autoForwardPortsSource",
    "makefile.configureOnOpen",
    "extensions.experimental.affinity"
  ],

  // improved performance settings
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // Security settings
  "security.workspace.trust.untrustedFiles": "open",
  "security.promptForLocalFileProtocolHandling": false,

  // Terminal settings
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.fontSize": 16,

  // Editor settings (common across profiles)
  "editor.scrollbar.horizontal": "hidden",
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 8,
  "editor.scrollBeyondLastLine": false,
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.mouseWheelZoom": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",

  // Git settings (common across profiles)
  "git.autofetch": true,
  "git.confirmSync": false,

  // Workbench settings (common across profiles)
  "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
  "workbench.activityBar.location": "top",
  "workbench.panel.showLabels": false,
  "workbench.navigationControl.enabled": false,
  "window.commandCenter": false,
  "window.zoomLevel": 3,

  // Chat settings (common across profiles)
  "inlineChat.hideOnRequest": true,
  "inlineChat.enableV2": true,
  "chat.editor.wordWrap": "on",
  "chat.tools.autoApprove": true,
  // GitHub Copilot settings (common across profiles)
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.enable": {
    "markdown": true,
    "plaintext": true
  },
  "github.copilot.chat.search.semanticTextResults": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Always start commit messages with an appropriate emoji followed by conventional commit format."
    },
    {
      "text": "Use these emoji patterns: ‚ú® feat:, üêõ fix:, üìö docs:, ‚ôªÔ∏è refactor:, üé® style:, üß™ test:, üîß chore:, üöÄ perf:, üîí security:"
    },
    {
      "text": "Examples: '‚ú® feat: add user authentication', 'üêõ fix: resolve memory leak in parser', 'üìö doc: update API documentation'"
    },
    {
      "text": "Keep commit messages as concise as possible."
    }
  ],

  // vscode-neovim settings (common across profiles) - Enhanced configuration based on vscode-neovim README
  "vscode-neovim.neovimClean": false,

  // Composite escape keys for vscode-neovim
  "vscode-neovim.compositeKeys": {
    // "jj": {
    //   "command": "vscode-neovim.escape"
    // }
  },

  // Control key passthrough settings
  "vscode-neovim.ctrlKeysForInsertMode": [
    "a",
    "d",
    "h",
    "j",
    "m",
    "o",
    "r",
    "t",
    "u",
    "w"
  ],
  "vscode-neovim.ctrlKeysForNormalMode": [
    "a",
    "d",
    "e",
    "f",
    "h",
    "i",
    "j",
    "k",
    "l",
    "m",
    "o",
    "r",
    "t",
    "u",
    "v",
    "n",
    "x",
    "z",
    "/",
    "]"
  ],
  // Remote settings (common across profiles)
  "remote.autoForwardPortsSource": "hybrid",

  // Additional Neovim-friendly VS Code settings
  "workbench.list.automaticKeyboardNavigation": false,

  // Disable conflicting VS Code shortcuts when using Neovim
  "keyboard.dispatch": "keyCode"
}
